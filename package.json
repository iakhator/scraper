{
  "name": "async-web-scraper",
  "version": "1.0.0",
  "description": "High-performance async web scraper with AWS SQS and DynamoDB",
  "private": true,
  "workspaces": [
    "apps/analytics",
    "apps/queue",
    "apps/worker",
    "packages/types",
    "packages/logger", 
    "packages/aws-wrapper",
    "packages/core"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev analytics\" \"npm run dev backend\"",
    "build": "npm run build --workspace=analytics && npm run build --workspace=backend", 
    "start": "concurrently \"npm run start --workspace=analytics\" \"npm run start --workspace=backend\"",
    "install:backend": "npm install --workspace=backend",
    "install:analytics": "npm install --workspace=analytics"
  },
  "keywords": [
    "web-scraping",
    "nodejs",
    "typescript", 
    "aws-sqs",
    "dynamodb",
    "puppeteer",
    "cheerio",
    "async",
    "queue"
  ],
  "author": "iakhator",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
